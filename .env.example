# Environment configuration example
# Copy this file to .env and fill in your values

# Supabase
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# App configuration
NODE_ENV=development
VITE_API_BASE=http://localhost:8787

# Web App Configuration
VITE_ENABLE_PUBLIC_BOARD=true
VITE_ENABLE_SIMULATOR=true
VITE_ENABLE_REPORTING=true

# Worker (Cloudflare)
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token

# Storage (R2/S3)
R2_BUCKET_NAME=evidence-layer
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_ENDPOINT=https://your-r2-endpoint.example.com

# Rate limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100

# Captcha (Turnstile)
TURNSTILE_SITE_KEY=your_site_key
TURNSTILE_SECRET_KEY=your_secret_key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Kill switch (default: false)
KILL_SWITCH_UPLOADS=false
KILL_SWITCH_PUBLIC_WRITE=false